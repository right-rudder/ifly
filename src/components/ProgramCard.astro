---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const esData = {
  primaryButtonText: "Reg√≠strate",
  secondaryButtonText: "Ver Detalles",
};

const enData = {
  primaryButtonText: "Register",
  secondaryButtonText: "View Details",
};

const data = Astro.currentLocale === "en" ? enData : esData;

const { imagePath, title, subTitle, url, description } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif,webp}",
);
if (!images[imagePath]) {
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`,
  );
}
---

<div class="max-w-[80vw] flex flex-row flex-wrap overflow-hidden text-white">
  <div
    class="flex flex-col py-8 gap-3 justify-between h-full lg:w-[40vw] lg:h-[40vh] max-w-[100%] px-2 lg:px-8 bg-stripes-blue bg-bottom bg-opacity-15"
  >
    <div class="flex flex-col gap-3">
      <h3 class="line-clamp-2 text-2xl lg:text-3xl font-semibold leading-tight">
        {title}
      </h3>
      {
        subTitle?.length > 0 && (
          <h3 class="word-clamp text-2xl lg:text-3xl leading-tight -skew-x-12 tracking-tight">
            - {subTitle}
          </h3>
        )
      }
      <p class="line-clamp-5 lg:text-lg">{description}</p>
    </div>
    <div class="flex flex-wrap gap-8 items-center mt-7">
      <a href=`${url}#sign-up-form` class="btn-primary"
        >{data.primaryButtonText}
      </a>
      <a
        href={url}
        class="btn-secondary"
      >
        {data.secondaryButtonText}
      </a>
    </div>
  </div>
  <div class="h-[40vh] w-full lg:w-[30vw] lg:h-[40vh] overflow-hidden shrink-0 relative border-blue-r">
    <Image
      src={images[imagePath]()}
      alt={title}
      class="w-full h-full object-cover scale-105 group-hover:scale-105 duration-700"
    />
  </div>
</div>
<br/>
