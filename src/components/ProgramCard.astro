---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { IoPersonCircle } from "react-icons/io5";
import { FaComments } from "react-icons/fa6";
import { IoIosArrowRoundForward } from "react-icons/io";

const { imagePath, title, url, description } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif,webp}",
);
if (!images[imagePath]) {
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`,
  );
}
---

<a href={url} class="max-w-sm flex flex-col group overflow-hidden rounded-xl">
  <div class="h-72 overflow-hidden shrink-0 relative">
    <Image
      src={images[imagePath]()}
      alt={title}
      class="w-full h-full object-cover scale-105 group-hover:scale-100 duration-700"
    />
  </div>

  <div
    class="flex flex-col py-8 gap-3 justify-between h-full bg-main-black px-5"
  >
    <div class="flex flex-col gap-3">
      <h3 class="text-2xl lg:text-3xl font-semibold leading-tight">
        {title}
      </h3>
      <p class="line-clamp-3">{description}</p>
    </div>
    <div class="flex gap-3 items-center self-end cursor-pointer group">
      <p
        class="text-main-blue group-hover:text-white duration-700 font-semibold"
      >
        Ver MÃ¡s
      </p>
      <div class="p-3 rounded-full duration-700">
        <IoIosArrowRoundForward
          className="text-main-blue size-6 group-hover:text-white duration-700"
        />
      </div>
    </div>
  </div>
</a>
