---
const esData = {
  title: "Toma el control de tu futuro...",
  firstParagraph:
    "Empieza a estudiar hoy en iFly Universidad Aeron√°utica<br> y toma el primer paso en tu carrera.",
};

const enData = {
  title: "Take the first step...",
  firstParagraph:
    "Start studying today at iFly Aeronautical University and take the first step in your career.",
};

const { imgURL } = Astro.props;

const data = Astro.currentLocale === "en" ? enData : esData;
---

<section  class="relative top-0 bg-local bg-top bg-cover h-[80vh] flex flex-col justify-end items-center content-center gap-10 pb-20" 
style=`background-image: linear-gradient(to top, black 0%, rgba(0, 0, 0, 0.7) 20%, rgba(0, 0, 0, 0.7) 80%, black 100%), linear-gradient(to right, black 0%, transparent 10%, transparent 90%, black 100%), url(${imgURL})`
>
  <h2 class="font-serif text-3xl lg:text-6xl text-white/90 tracking-normal"
      set:html={data.title}
  >
  </h2>
  <p class="text-2xl lg:text-3xl max-w-[90vw] text-white/80"
      set:html={data.firstParagraph}
  >
  </p>
</section>
