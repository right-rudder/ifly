---
import { Image } from "astro:assets";
import HeroImage from "/src/assets/estudiante-en-ifly-mexico.jpg";
---

<header
  class="relative isolate pt-14 overflow-hidden h-screen sm:h-[60vh] lg:h-screen text-white flex
    items-center"
>
  <Image
    src={HeroImage}
    alt="Estudiante en iFly"
    class="absolute top-0 w-full h-full object-cover -z-50"
    quality={100}
  />

  <div class="absolute inset-0 bg-main-black/60 -z-40"></div>

  <div class="flex w-full max-w-7xl mx-auto px-5">
    <div class="flex flex-col gap-4 lg:gap-8 mx-auto items-center">
      <h1
        class="text-4xl max-w-xl lg:text-7xl font-medium text-center lg:max-w-3xl"
      >
        Primera Universidad Aeronáutica en México
      </h1>
      <h2
        class="text-xl max-w-xl lg:text-3xl text-center lg:max-w-2xl text-gray-200"
      >
        Conviértete en piloto profesional con la mejor formación académica y
        práctica
      </h2>
      <div class="flex gap-5 flex-col sm:flex-row">
        <a href="/contacto" class="btn-primary w-full sm:w-fit">Regístrate</a>
        <a href="#bienvenido" class="btn-secondary w-full sm:w-fit"
          >Más Información</a
        >
      </div>
    </div>
  </div>
</header>
