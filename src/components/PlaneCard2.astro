---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { IoIosArrowForward } from "react-icons/io";
const lang = Astro.currentLocale === "en" ? "en" : "es";
const { planeData } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif,webp}",
);

const urlPrefix = lang === "en" ? "/en/fleet/aircraft/" : "/flota/aviones/";

if (!images[planeData.headerImage]) {
  throw new Error(
    `"${planeData.headerImage}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`,
  );
}
---

<div class="w-full lg:max-w-[80vw] flex flex-col lg:flex-row overflow-hidden text-white">
  <div
    class="flex flex-col py-8 gap-3 justify-between h-full lg:w-[40vw] lg:h-[40vh] px-8 bg-stripes-blue bg-bottom bg-opacity-15"
  >
    <div class="flex flex-col gap-3">
      <h3 class="word-clamp text-2xl lg:text-3xl font-semibold leading-tight">
        {planeData.name}
      </h3>
      {
        planeData.name?.length > 0 && (
          <h3 class="word-clamp text-2xl lg:text-3xl leading-tight -skew-x-12">
            {planeData.model}
          </h3>
        )
      }
      <p class="line-clamp-5 lg:text-lg">{planeData.description}</p>
    </div>
    <div class="flex flex-wrap gap-8 items-center mt-7">
      <a href=`/contacto` class="btn-primary">Cont√°ctanos</a>
    </div>
  </div>
  <div
    class="w-full lg:w-[30vw] lg:h-[40vh] overflow-hidden shrink-0 relative border-blue-r"
  >
    <Image
      src={images[planeData.headerImage]()}
      alt={planeData.name}
      class="w-full h-full object-contain lg:object-cover scale-105 group-hover:scale-105 duration-700"
    />
  </div>
</div>
<br />
