---
import { Image } from "astro:assets";
// import BgTextureDown from "../assets/bg-texture-down.jpg";
import LogoWhiteNoText from "../assets/ifly-logo-white-no-text.png";

const esData = {
  h2text: "Bienvenido a iFly",
  h3text: "Somos la primera universidad aeronáutica para pilotos aviadores en México",
  ptext: `Te preparamos para ser un profesional en las alturas. Ya sea que optes por nuestra carrera de 
  Pro Pilot y obtengas un título de Técnico Superior Universitario, o por la licenciatura en Aviation Management 
  (Gestión Aeronáutica) y obtengas un título de Licenciado. <br/> <br/> Al final de las carreras obtendrás la licencia de 
  Piloto Comercial de Ala Fija con la que podrás laborar en cualquier área de la aviación civil.`
};

const enData = {
  h2text: "Welcome to iFly",
  h3text: "We are the first aeronautical university for aviator pilots in Mexico",
  ptext: `We prepare you to be a professional in the skies. Whether you choose our Pro Pilot program 
  and earn a University Technician degree, or the Aviation Management (Aeronautical Management) 
  bachelor's degree and earn a Licentiate degree. <br/> <br/> At the end of these programs, you will obtain the 
  Fixed-Wing Commercial Pilot License, allowing you to work in any area of civil aviation.`
};

const data = Astro.currentLocale === "en" ? enData : esData;

---

<section id="bienvenido" class="scroll-my-24 relative overflow-hidden bg-stripes bg-top bg-cover">
  <!-- <Image
    src={BgTextureDown}
    alt="Texture used for background"
    class="absolute inset-0 -z-50 object-cover object-center w-full h-full"
  /> -->

  <div
    class="max-w-[90vw] lg:max-w-[50vw] mx-auto px-5 py-24 flex flex-col-reverse lg:flex-row gap-20 items-center"
  >
    <div class="flex-1 flex justify-center items-center content-center flex-col gap-5 lg:text-center">
      <Image
        src={LogoWhiteNoText}
        alt="iFly logo in white"
        class="w-24"
      />
      <h2 class="uppercase text-main-blue text-2xl lg:text-4xl font-bold tracking-widest text-center"
          set:html={data.h2text}
      >
      </h2>
      <h3 class="text-xl lg:text-3xl font-bold"
          set:html={data.h3text}
      >
      </h3>
      <p set:html={data.ptext}
      >
      </p>
      <!-- <a href="/nosotros/historia" class="btn-primary">Sobre Nosotros</a> -->
    </div>
  </div>
</section>
