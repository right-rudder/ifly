---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
const { data } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif,webp}",
);
if (!images[data.headerImage]) {
  throw new Error(
    `"${data.headerImage}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`,
  );
}
---

<header
  class="relative isolate pt-14 overflow-hidden min-h-fit h-[40vh] lg:h-[85vh] text-white flex
    items-center bg-bottom bg-cover"
  style=`background-image: linear-gradient(to top, black 0%, rgba(0, 0, 0, 0.5) 50%, black 100%), linear-gradient(to right, black 0%, transparent 10%, transparent 90%, black 100%), url(./${data.headerImage})`
>
  <div
    class="flex flex-col items-center gap-4 lg:gap-8 sm:translate-y-20 mx-auto"
  >
    <h1
      class="text-4xl max-w-2xl text-center font-semibold lg:text-8xl lg:max-w-4xl"
      set:html={data.title}
    />
    <h2 class="text-3xl font-serif max-w-xl lg:text-5xl lg:max-w-2xl text-gray-200">
      ::::::::
    </h2>
    <p class="text-md lg:text-lg w-[40vw] text-center"
      set:html={data.text}
    >
    </p>
  </div>
</header>
